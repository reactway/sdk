{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "noUnusedLocals": true,
        "declaration": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "newLine": "LF"
    },
    "exclude": [
        "**/__tests__",
        "dist"
    ]
}
