{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ES2015",
        "rootDir": "src",
        "noUnusedLocals": true,
        "declaration": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "dist"
    ]
}
